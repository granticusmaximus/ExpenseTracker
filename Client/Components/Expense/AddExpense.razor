@page "/addexpense"
@inject HttpClient Http
@using ExpenseTracker.Shared.Models
@inject NavigationManager Navigation

<h1>Create New Expense</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form @onsubmit="@(async () => await CreateExpense())">
            <div class="form-group">
                <label for="Title" class="control-label">Title</label>
                <input for="Title" class="form-control" @bind="@expense.Title" />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class="form-control" @bind="@expense.Amount"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button class="btn btn-warning" @onclick="@cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>

@functions {
    Expense expense = new Expense();
    protected async Task CreateExpense()
    {
        await Http.PostAsJsonAsync("/api/Expense/CreateExpense", expense);
        Navigation.NavigateTo("/");
    }
    void cancel()
    {
        Navigation.NavigateTo("/");
    }
}  