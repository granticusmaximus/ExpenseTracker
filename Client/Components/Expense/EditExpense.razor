@page "/editexpense/{Id}"
@inject HttpClient Http
@using ExpenseTracker.Shared.Models
@inject NavigationManager Navigation

<h2>Edit Expense</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form @onsubmit="@(async () => await UpdateExpense())">
            <div class="form-group">
                <label for="Title" class="control-label">Name</label>
                <input for="Title" class="form-control" @bind="@expense.Title" />
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class="form-control" @bind="@expense.Amount"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="submit" value="Cancel" @onclick="@cancel" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

@functions {
    [Parameter]
    public string id { get; set; }
    public Expense expense = new Expense();
    protected override async Task OnInitializedAsync()
    {
        expense = await Http.GetFromJsonAsync<Expense>("/api/Expense/GetSingleExpense/" + Convert.ToInt32(id));
    }
    protected async Task UpdateExpense()
    {
        await Http.PutAsJsonAsync( "api/Expense/UpdateExpense", expense);
        Navigation.NavigateTo("/");
    }
    void cancel()
    {
        Navigation.NavigateTo("/");
    }
}  